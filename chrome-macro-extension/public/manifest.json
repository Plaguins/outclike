{
  "manifest_version": 3,
  "name": "Chrome Macro Extension",
  "version": "1.1",
  "description": "An extension to create and manage keyboard macros.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "src/background.ts"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"]
    }
  ]
}
